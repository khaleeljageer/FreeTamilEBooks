<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:paddingEnd="17dp" tools:ignore="RtlSymmetry">

    <TextView
            android:id="@+id/id_item_fbreader_catalog_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="14"
            android:textColor="#cccccc"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/id_item_fbreader_catalog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@id/id_item_fbreader_catalog_page"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14sp"/>

    <View
            android:id="@+id/id_item_fbreader_catalog_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#eeeeee"
            android:layout_marginStart="17dp"/>
</RelativeLayout>